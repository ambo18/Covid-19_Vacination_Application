<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUpdateRecordActivity2">


    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="105dp"
        app:c_border="true"
        app:c_border_width="1dp"
        app:c_border_color="@color/teal_700"
        android:src="@drawable/ic__addphoto_black"
        android:layout_height="105dp" />


    <RelativeLayout
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileIv"
        android:padding="5dp"
        android:elevation="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_rectangle">



        <EditText
            android:id="@+id/nameEt"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp"
            android:textSize="13dp"
            android:inputType="textPersonName|textCapWords"
            android:layout_width="match_parent"
            android:hint="Name"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/phoneEt"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:inputType="phone"
            android:textSize="13dp"
            android:layout_below="@+id/nameEt"
            android:layout_width="match_parent"
            android:hint="Contact number"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/addressEt"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:inputType="text"
            android:textSize="13dp"
            android:layout_below="@+id/phoneEt"
            android:layout_width="match_parent"
            android:hint="Address"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/dobEt"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="15dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/addressEt"
            android:layout_width="160dp"
            android:hint="Birth date"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/categoryEt"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="2dp"
            android:layout_alignParentRight="true"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/addressEt"
            android:layout_width="160dp"
            android:hint="Category"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/vaccineManEt"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/categoryEt"
            android:layout_width="match_parent"
            android:hint="Vaccine Manufacturer"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/healtfacilityEt"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="15dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/vaccineManEt"
            android:layout_width="160dp"
            android:hint="Health Facility Name"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/contactEt"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"
            android:inputType="phone"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/vaccineManEt"
            android:layout_width="160dp"
            android:hint="Contact no."
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/vaccinatorEt"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="15dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/healtfacilityEt"
            android:layout_width="160dp"
            android:hint="1st Vaccinator name"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/vaccinatorEt2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="2dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/contactEt"
            android:layout_width="160dp"
            android:hint="2nd Vaccinator name"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/discriptionEt"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/vaccinatorEt"
            android:layout_width="160dp"
            android:hint="1st dose"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/discriptionEt2"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/vaccinatorEt"
            android:layout_width="160dp"
            android:hint="2nd dose"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/booster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOSTER"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:background="@color/black"
            android:textAlignment="center"
            android:layout_below="@id/discriptionEt"/>

        <EditText
            android:id="@+id/dateET2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/booster"
            android:layout_alignParentRight="true"
            android:layout_width="160dp"
            android:hint="Date"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/vaccineManufacturerET"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/booster"
            android:layout_width="160dp"
            android:hint="Vaccine Manufacturer"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/vaccinatorEt3"
            android:layout_marginStart="5dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/vaccineManufacturerET"
            android:layout_width="160dp"
            android:hint="1st Vaccinator name"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/vaccinatorEt4"
            android:layout_marginEnd="5dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/vaccineManufacturerET"
            android:layout_width="160dp"
            android:hint="2nd Vaccinator name"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/doseET2"
            android:layout_marginEnd="5dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/vaccinatorEt3"
            android:layout_width="160dp"
            android:hint="2nd dose"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/doseET1"
            android:layout_marginStart="5dp"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_below="@+id/vaccinatorEt3"
            android:layout_width="160dp"
            android:hint="1st dose"
            android:layout_height="wrap_content"/>



    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/teal_200"
        android:backgroundTint="@color/purple_500"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_check_black"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
