<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInForm">

        <TextView
            android:id="@+id/log_in_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/log_in_image"/>

        <EditText
            android:drawableLeft="@drawable/ic_person_user"
            android:drawablePadding="10dp"
            android:id="@+id/login_username"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_below="@id/log_in_image"/>
        <EditText
            android:drawableLeft="@drawable/ic_person_password"
            android:drawablePadding="10dp"
            android:id="@+id/login_password"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_below="@id/login_username"/>

        <Button
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password"
            android:elevation="50dp"
            android:background="@drawable/buttom_background"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Login"
            android:backgroundTint="@color/teal_200"/>

</RelativeLayout>