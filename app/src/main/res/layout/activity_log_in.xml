<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <TextView
        android:id="@+id/log_in_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/log_in_image"/>

    <EditText
        android:drawableLeft="@drawable/ic_person_user"
        android:drawablePadding="10dp"
        android:id="@+id/username"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_below="@id/log_in_image"/>
    <EditText
        android:id="@+id/password"
        android:drawableLeft="@drawable/ic_person_password"
        android:drawablePadding="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/username"/>
    <EditText
        android:drawableLeft="@drawable/ic_restore"
        android:drawablePadding="10dp"
        android:id="@+id/rep_password"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Renter-Password"
        android:layout_below="@id/password"/>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rep_password"
        android:text="Sign In"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttom_background"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="@color/teal_200"/>
    <Button
        android:id="@+id/log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up"
        android:text="LogIn"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttom_background"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="@color/teal_200"/>

</RelativeLayout>