<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/purple_200"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordDatailActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/profileIv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:c_border="true"
                app:c_border_color="@color/white"
                app:c_border_width="2dp"
                android:src="@drawable/ic_person_black"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="3">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/discriptionTv"
                        android:gravity="top"
                        android:background="@color/black"
                        android:text="Get Vaccinated"
                        android:layout_span="2"
                        android:textColor="@color/white"
                        android:padding="5dp"

                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/description2Tv"
                        android:layout_width="223dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:background="@color/black"
                        android:gravity="top"
                        android:padding="5dp"
                        android:text="Get Vaccinated"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone no."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="contact number"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/addressTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/dobTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="birth date"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/categoryTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="category"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccine Manu."
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/vaccineManufacturerTv"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="vaccine manu"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Healt Facility Name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/healtfacilityNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="facility Name"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact no."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/contactNoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="conctact "
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccinators name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/vaccinatoNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="vaccinator name"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/vaccinatoName2Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="vaccinator name"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booster"
                        android:layout_span="4"
                        android:textAlignment="center"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="3dp"/>

                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccine Manu."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/vaccineManufacturer2Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="vaccine manufacturer"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/date2Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccinators name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/vaccinator3Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1st vaccinator"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/vaccinator4Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2nd vaccinator"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/dose3Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1st dose"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/dose4Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2nd dose"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date added"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/addedTimeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="date added"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date updated"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/updatedTimeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="date Updated"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add_blck"
        android:layout_alignParentRight="true"
        app:rippleColor="@color/teal_200"
        android:backgroundTint="@color/purple_500"
        android:layout_margin="10dp"
        android:contentDescription="TODO" />

</RelativeLayout>